@model PowerBIAdmin.Models.OnboardWorkspaceModel

<h2 id="page-title">
    <span><a class="btn btn-sm h2-backarrow" asp-action="Workspaces"><i class="fa fa-backward"></i></a></span>
    Onboard New Workspace
</h2>

<form id="new-workspace" method="post" class="form-horizontal">
  <fieldset>
    <div class="form-group row">
      <label for="workspaceName" class="col-sm-3 col-form-label">Workspace Name</label>
      <div class="col-sm-9">
        <input class="form-control" id="workspaceName" name="workspaceName" placeholder="Enter Workspace Name" value="@Model.WorkspaceName">
      </div>
    </div>    
    <div class="form-group row button-row">
      <button id="create-tenant-button" type="submit" class="btn btn-primary">
        <i class="fa fa-user-plus"></i>
        Create New Workspace
      </button>
    </div>
  </fieldset>
</form>

<div class="loading" style="display:none;">
  <div class="loading-image">
    <img src="~/images/loading-2.gif" />
  </div>
</div>

@section Scripts {
  <script type="text/javascript">
    $(function () {
        $("#new-workspace").submit(function () {
            $("#new-workspace").hide();
            $("#page-title").text("Onboarding New Workspace...");
            $(".loading").show(100);
      });
    });
  </script>
}
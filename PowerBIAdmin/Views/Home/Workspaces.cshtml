@model IList<PowerBIAdmin.Repository.Models.PowerBiWorkspace>

<H2>Power BI Workspaces</H2>

<div class="toolbar">
  <a id="create-workspace-button" class="btn btn-primary" asp-action="OnboardWorkspace">
    <i class="fa fa-user-plus"></i>
    Create New Workspace
  </a>
</div>

<table class="table table-bordered table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Workspace</th>
      <th>Workspace ID</th>
      <th style="text-align:center;">Embed</th>
      <th style="text-align:center;">Web URL</th>
      <th style="text-align:center;">View</th>
      <th style="text-align:center;">Delete</th>
    </tr>
  </thead>
  @foreach (var tenant in Model) {
    <tr>
      <td>@tenant.Name</td>
      <td>@tenant.WorkspaceId</td>
      <td style="text-align:center"><a href="@tenant.WorkspaceUrl" class="nav nav-link" target="_blank"><i class="fa fa-bar-chart"></a></td>
      <td style="text-align:center"><a href="@tenant.WorkspaceUrl" class="nav nav-link" target="_blank"><i class="fa fa-line-chart"></a></td>
      <td style="text-align:center"><a href="Workspace/?name=@tenant.Name" class="nav nav-link"><i class="fa fa-binoculars"></i></a></td>
      <td style="text-align:center"><a href="DeleteWorkspace/?name=@tenant.Name" class="nav nav-link"><i class="fa fa-remove"></i></a></td>
    </tr>
  }
</table>